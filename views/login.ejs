

<div class="col-md-12 col-xl-5 center-block">
    <h1>Kompis-chat login</h1>
    <%- include ("./partials/messages") %>
    <form action="/users/login" method="POST">
        <div class="form-group">
            <label>Brukernavn</label>
            <input class="form-control" name="username" type="text">
        </div>
        <div class="form-group">
            <label>Passord</label>
            <input type="password" class="form-control" name="password">
        </div>
        <label>Velg chat-rom:</label>
        <select name="room">
            <option value="Skravle">Skravle</option>
            <option value="Teknologi">Teknologi</option>
            <option value="Politikk">Politikk</option>
            <option value="Kjærlighet">Kjærlighet</option>
            <option value="Annet">Annet</option>
        </select>
        <br>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Login">
        </div>
        <p>Ikke opprettet en bruker? <a href="./register">Opprett bruker</a></p>
    </form>
</div>
